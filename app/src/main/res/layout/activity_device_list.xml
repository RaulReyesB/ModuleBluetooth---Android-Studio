<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEAE8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conecta la aplicacion"
            android:textColor="#8C4F40"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controla tu casa"
            android:textColor="#8C4F40"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Botón para buscar dispositivos -->
        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar dispositivos"
            android:backgroundTint="#E8D9D3"
            android:textColor="#8C4F40"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Lista de dispositivos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivos disponibles:"
            android:textColor="#8C4F40"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/lv_devices"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:divider="#D8B6A4"
            android:dividerHeight="1dp"
            android:layout_marginBottom="24dp" />

        <!-- Sección Cochera -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COCHERA"
                    android:textColor="#8C4F40"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center">

                    <!-- Botones para cochera -->
                    <Button
                        android:id="@+id/btn_cochera_off"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Apagar foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_cochera_on"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Encender foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_cochera_open"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Abrir puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_cochera_close"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Cerrar puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_cochera_read_sensor"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Leer sensor"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />
                </GridLayout>

                <TextView
                    android:id="@+id/tv_cochera_sensor_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia: "
                    android:textColor="#8C4F40"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DORMITORIO 2"
                    android:textColor="#8C4F40"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center">

                    <!-- Botones para Dormitorio 2 -->
                    <Button
                        android:id="@+id/btn_dormitorio2_off"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Apagar foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio2_on"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Encender foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio2_open"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Abrir puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio2_close"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Cerrar puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Dormitorio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DORMITORIO"
                    android:textColor="#8C4F40"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center">

                    <!-- Botones para dormitorio -->
                    <Button
                        android:id="@+id/btn_dormitorio_off"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Apagar foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio_on"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Encender foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio_open"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Abrir puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_dormitorio_close"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Cerrar puerta"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Sección Baño -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BAÑO"
                    android:textColor="#8C4F40"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/btn_bano_off"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Apagar foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btn_bano_on"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="Encender foco"
                        android:backgroundTint="#E8D9D3"
                        android:textColor="#8C4F40"
                        android:textSize="16sp"
                        android:layout_margin="8dp" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Patio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PATIO"
                    android:textColor="#8C4F40"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_patio_sensor_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor de Humedad: "
                    android:textColor="#8C4F40"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
